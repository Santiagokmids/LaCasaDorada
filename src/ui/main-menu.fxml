<VBox prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <MenuBar VBox.vgrow="ALWAYS">
        <menus>
          <Menu mnemonicParsing="false" text="Nuevo">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#createClient" text="Añadir Cliente" />
                  <MenuItem mnemonicParsing="false" text="Añadir Empleado" />
                  <MenuItem mnemonicParsing="false" text="Añadir Usuario" />
                  <MenuItem mnemonicParsing="false" text="Crear Pedido" />
                  <MenuItem mnemonicParsing="false" text="Añadir Producto" />
                  <MenuItem mnemonicParsing="false" text="Añadir Tipo de Producto" />
                  <MenuItem mnemonicParsing="false" text="Añadir Ingrediente" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Eliminar">
            <items>
              <MenuItem mnemonicParsing="false" text="Eliminar Cliente" />
                  <MenuItem mnemonicParsing="false" text="Eliminar Empleado" />
                  <MenuItem mnemonicParsing="false" text="Eliminar Usuario" />
                  <MenuItem mnemonicParsing="false" text="Eliminar Producto" />
                  <MenuItem mnemonicParsing="false" text="Eliminar Tipo de Producto" />
                  <MenuItem mnemonicParsing="false" text="Eliminar Ingrediente" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Deshabilitar">
            <items>
              <MenuItem mnemonicParsing="false" text="Deshabilitar Cliente" />
                  <MenuItem mnemonicParsing="false" text="Deshabilitar Empleado" />
                  <MenuItem mnemonicParsing="false" text="Deshabilitar Usuario" />
                  <MenuItem mnemonicParsing="false" text="Deshabilitar Producto" />
                  <MenuItem mnemonicParsing="false" text="Deshabilitar Tipo de Producto" />
                  <MenuItem mnemonicParsing="false" text="Deshabilitar Ingrediente" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Actualizar">
               <items>
                  <MenuItem mnemonicParsing="false" text="Actualizar Cliente" />
                  <MenuItem mnemonicParsing="false" text="Actualzar Empleado" />
                  <MenuItem mnemonicParsing="false" text="Actualizar Usuario" />
                  <MenuItem mnemonicParsing="false" text="Actualizar Producto" />
                  <MenuItem mnemonicParsing="false" text="Actualizar Tipo de Producto" />
                  <MenuItem mnemonicParsing="false" text="Actualizar Ingrediente" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
      <BorderPane style="-fx-background-color: black;" VBox.vgrow="ALWAYS">
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
         <bottom>
            <Label alignment="CENTER" contentDisplay="BOTTOM" graphicTextGap="5.0" prefHeight="38.0" prefWidth="141.0" textFill="#e6c169" textOverrun="WORD_ELLIPSIS" BorderPane.alignment="TOP_CENTER">
               <font>
                  <Font name="Bernard MT Condensed" size="30.0" />
               </font>
               <effect>
                  <Lighting bumpInput="$null" diffuseConstant="2.0" specularConstant="0.09" specularExponent="40.0" surfaceScale="4.29">
                     <light>
                        <Light.Distant />
                     </light>
                  </Lighting>
               </effect>
               <BorderPane.margin>
                  <Insets bottom="20.0" right="-470.0" />
               </BorderPane.margin>
            </Label>
         </bottom>
         <top>
            <ImageView fx:id="imageBanner" fitHeight="122.0" fitWidth="545.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="80.0" />
               </BorderPane.margin>
            </ImageView>
         </top>
      </BorderPane>
   </children>
